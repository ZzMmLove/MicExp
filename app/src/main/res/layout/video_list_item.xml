<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="4dp"
    android:background="#ffffff"
    android:orientation="horizontal" 
    android:clickable="false">

    
    <ImageView
        android:id="@+id/vid_img"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        android:scaleType="centerInside"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_weight="1"
    android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/vid_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:maxLines="2"
            android:minLines="2"
            android:text="AAAAAAAAAAAAAAAAAAAAAA"
            android:textColor="#000000"
            android:textSize="14sp" />
  </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginLeft="2dp"
            android:gravity="right" 
            android:layout_weight="1" >
        <ImageView
            android:id="@+id/iv_collect"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/detail_interaction_bar_favorite" />
        
           <!-- <ImageView
             android:id="@+id/iv_download"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/detail_interaction_bar_downloaded"
            />-->
            <ImageView
             android:id="@+id/iv_share"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/detail_interaction_bar_share_collection" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:src="@mipmap/news_commentlike_fw" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:gravity="bottom"
                android:text="播放量"
                android:textColor="#adadad" 
                android:clickable="false"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/news_commentlike_fw" />

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="下载量"
                android:clickable="false"
                android:textColor="#adadad" 
                android:textSize="10sp" />
            
            
             
        </LinearLayout>
    </LinearLayout>

</LinearLayout>