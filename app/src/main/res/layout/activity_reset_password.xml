<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:padding="12dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="48dip"
            android:layout_marginTop="20dp" >

            <AutoCompleteTextView
                android:id="@+id/reset_password_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/edittext_login"
                android:hint="手机/邮箱/用户名"
                android:paddingLeft="90dp"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/reset_password_username"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:src="@mipmap/icon_account" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/reset_password_edt_code"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/more"
                android:background="@drawable/edittext_login"
                android:hint="验证码"
                android:singleLine="true"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp" />

            <cn.gdgst.palmtest.rewrite.RippleView
                android:id="@+id/more"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                rv_centered="true" >

                <Button
                    android:id="@+id/btn_getcode"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#26bbf9"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingTop="7dp"
                    android:text="获取验证码"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </cn.gdgst.palmtest.rewrite.RippleView>
        </RelativeLayout>

        <cn.gdgst.palmtest.rewrite.RippleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            rv_centered="true" >

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#26bbf9"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="下一步"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </cn.gdgst.palmtest.rewrite.RippleView>
    </LinearLayout>

</LinearLayout>