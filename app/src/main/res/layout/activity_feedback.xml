    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" 
        >

        <RelativeLayout
            android:id="@+id/rl_account_manager"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:padding="10dip" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="17.0dip"
                android:text="姓名"
                android:textColor="#353535"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_name"
                android:background="@null"
                android:hint="可选"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dadada" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:padding="10dip" >

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="17.0dip"
                android:text="手机"
                android:textColor="#353535"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_phone"
                android:background="@null"
                android:hint="可选"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dadada" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:padding="10dip" >

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="17.0dip"
                android:text="邮箱"
                android:textColor="#353535"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tv_email"
                android:background="@null"
                android:hint="可选"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dadada" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:padding="10dip" >

            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="17.0dip"
                android:text="QQ"
                android:textColor="#353535"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_qq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="29dp"
                android:layout_toRightOf="@+id/tv_qq"
                android:background="@null"
                android:hint="可选"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#dadada" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请填写您的问题或者建议，我们将尽快处理。"
            android:maxLength="150"
            android:padding="15dp"
            android:textColorHint="#C0C0C0"
            android:textSize="16sp" />
<cn.gdgst.palmtest.rewrite.RippleView
  android:id="@+id/more"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  rv_centered="true">
        <Button
        android:id="@+id/sub_feedback"   
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#26bbf9"
        android:text="提交反馈"
        android:textColor="#ffffff"
        android:textSize="18sp" /> 
        </cn.gdgst.palmtest.rewrite.RippleView>
       
    </LinearLayout>

    

</LinearLayout>