<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/home_like_item_image"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_margin="3dp"
        android:src="@mipmap/default_face" />

    <ImageView
        android:id="@+id/play_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:src="@mipmap/play_icon"
         />

    <ImageView
        android:id="@+id/home_like_item_img_apoint"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/home_like_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/home_like_item_image"
        android:text="TextView"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/home_like_item_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="22dp"
        android:layout_marginTop="5dp"
        android:text="逸夫馆50米"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/home_like_item_img_inner"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_below="@+id/home_like_item_title"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/home_like_item_image"
        android:scaleType="fitXY"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/home_like_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_like_item_img_inner"
        android:layout_alignTop="@+id/home_like_item_img_inner"
        android:layout_toRightOf="@+id/home_like_item_image"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/home_like_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_like_item_image"
        android:layout_toRightOf="@+id/home_like_item_price"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/home_like_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_like_item_text"
        android:layout_alignLeft="@+id/home_like_item_img_inner"
        android:layout_marginRight="2dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <Button
        android:id="@+id/goto_course"
        android:layout_width="70dip"
        android:layout_height="25dip"
        android:layout_alignBottom="@+id/home_like_item_img_inner"
        android:layout_alignRight="@+id/home_like_item_long"
        android:layout_marginLeft="100dip"
        android:layout_marginTop="13dip"
        android:background="@drawable/btn_fasong"
        android:gravity="center"
        android:text="进入课程"
        android:textColor="@color/white"
        android:textSize="13sp" />

</RelativeLayout>